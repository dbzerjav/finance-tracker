<h2>User Details</h2>

<dl class="dl-horrizontal">
  <dt><strong>Full Name</strong></dt>
  <dd><%= @user.fullname %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0 %>
  <%= render "stocks/list" %>
<% else %>
  <p class="lead">This user is not tracking anys stocks</p>
<% end %>

<%= link_to "Back", my_friends_path, class: "btn btn-primary" %>